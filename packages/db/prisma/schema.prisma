generator client {
  provider = "prisma-client-js"
  output = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String  @id @default(uuid())
  name String
  publicKey  String? @unique
  email   String  @unique
  isOnboarded  Boolean   @default(false)
  type         CreatorType?  @default(Youtuber)
  socialHandle  String?   @unique
  experience  ExperienceWithDigitalAssets? @default(Beginner)
  asset  Assets[]
}

model Assets {
  id String @id @default(uuid())
  userId  String
  user User  @relation(fields: [userId], references: [id])
}

enum CreatorType{
  Youtuber
  Musician
  other
}

enum ExperienceWithDigitalAssets{
  Beginner
  Intermediate
  Advance
}