generator client {
  provider = "prisma-client-js"
  // output = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String  @id @default(uuid())
  name String
  publicKey  String? @unique
  email   String  @unique
  isOnboarded  Boolean   @default(false)
  creatorType         CreatorType?  @default(Youtuber)
  socialHandle  String?   @unique
  experience  ExperienceWithDigitalAssets? @default(Beginner)
  asset  AssetsCollection[]
}

model AssetsCollection {
  id String @id @default(uuid())
  name String
  description String
  category AssetsCollectionCategory
  userId  String
  collectionImageUrl  String?
  underdogProjectId Int @default(0)
  user User  @relation(fields: [userId], references: [id])
  asset Asset []
}

model Asset {
  id String @id @default(uuid())
  name String
  symbol String
  description String
  imageurl  String
  assetType AssetType
  collectionId String
  AssetsCollection AssetsCollection @relation(fields: [collectionId], references: [id])
}


enum AssetType {
  Video
  Image
  Audio
}

enum CreatorType {
  Youtuber
  Musician
  other
}

enum AssetsCollectionCategory {
  Youtuber
  Musician
  other
}

enum ExperienceWithDigitalAssets {
  Beginner
  Intermediate
  Advance
}