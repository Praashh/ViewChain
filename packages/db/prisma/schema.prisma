generator client {
  provider = "prisma-client-js"
  // output = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String  @id @default(uuid())
  name String
  publicKey  String? @unique
  email   String  @unique
  isOnboarded  Boolean   @default(false)
  creatorType         CreatorType?  @default(Youtuber)
  socialHandle  String?   @unique
  socialAccount String?
  proof   Json?
  experience  ExperienceWithDigitalAssets? @default(Beginner)
  asset  AssetsCollection[]
  assetViews AssetView[]
}

model AssetsCollection {
  id String @id @default(uuid())
  name String
  description String
  category AssetsCollectionCategory
  userId  String
  collectionImageUrl  String?
  underdogProjectId Int @default(0)
  user User  @relation(fields: [userId], references: [id])
  asset Asset []
}

model Asset {
  id String @id @default(uuid())
  name String
  symbol String
  description String
  imageurl  String
  assetUrl  String
  assetType String
  metadata String 
  analytics Json
  collectionId String
  AssetsCollection AssetsCollection @relation(fields: [collectionId], references: [id])
  assetViews AssetView[]
  viewProofs ViewProof[]
}

model AssetView {
  id        String   @id @default(uuid())
  assetId   String
  userId    String?
  fingerprint String?
  timestamp DateTime @default(now())
  asset     Asset    @relation(fields: [assetId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
}

model ViewProof {
  id        String   @id @default(uuid())
  assetId   String
  viewCount Int
  proof     Json
  timestamp DateTime @default(now())
  asset     Asset    @relation(fields: [assetId], references: [id])
}

enum CreatorType {
  Youtuber
  Musician
  other
}

enum AssetsCollectionCategory {
  Youtuber
  Musician
  other
}

enum ExperienceWithDigitalAssets {
  Beginner
  Intermediate
  Advance
}